<h1 style="font-family: Sans-serif;">TinyApp!</h1>

<div style="font-family: Sans-serif;background-color: lightblue; padding: 10px; border-radius: 5px;">
  <% if(user){ %>
  <form action="/logout" method="POST">
    <div><%=user.email %>
      <button>Log Out</button>
    </div>
  </form>
  <% } else {%>
    <form action='/register' method="GET">
      <button style="float: left">Register</button>
    </form>
    <form action="/login" method="GET">
      <button>Log in</button>
    </form>
  <% } %>
</div>
