<!DOCTYPE html>
<html lang="en">
<head>
</head>
<header>
  <% include ./partials/_header %>
</header>
<body>
  <%if (user) {%>
    <% for(var url in urls) { %>
      <%if (user["id"] === urls[url]['userID']){%>
        <p><a href="/u/<%=url%>/"><%=url%></a>: <%= urls[url].longURL%></p>
        <div style="float: left">
        <form  action="/urls/<%=url%>" method="GET">
          <input type="submit" value="Edit">
        </form>
      </div>
      <div>
        <form  action="/urls/<%=url%>/delete" method="POST">
          <input type="submit" value="Delete">
        </form>
      </div>
        <hr>
      <% } %>
    <% } %>
      <form action="/urls/new" method="GET">
      <button style="margin-top:20px; width:250px; float: right; position: relative; left: -50%;">Add URL!</button>
    </form>
  <% } %>
</body>
</html>



